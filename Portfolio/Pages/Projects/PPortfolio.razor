@page "/portfolio"
@using Portfolio.Client
@layout ProjectLayout
@inject AppState AppState;
@inject ProjectState ProjectState;

<PageIsland IslandTitle="Introductie" id="iductie">
    <ChildContent>
        Introductie van mijn Portfolio
    </ChildContent>
</PageIsland>
<PageIsland IslandTitle="Componenten" id="comps">
    <ChildContent>
        De componenten die ik heb gemaakt voor mijn portfolio
    </ChildContent>
</PageIsland>
<PageIsland IslandTitle="Services" id="services">
    <ChildContent>
        De Services die ik heb gemaakt voor mijn portfolio
    </ChildContent>
</PageIsland>

@code {

    private static readonly NavLinkData[] Links =
    {
        new("#iductie", "Introductie"),
        new("#comps", "Componenten"),
        new("#services", "Services")
    };

    private static readonly HeaderData HeaderData = new()
    {
        ImagePath = "icon-192.png",
        Title = "Portfolio Project",
        UnderTitle = "Project-pagina waar ik uitleg hoe ik mijn Portfolio gemaakt heb"
    };


    protected override void OnInitialized()
    {
        AppState.PageTitleExtension = " - Portfolio Project";
        AppState.Links = Links;
        AppState.MinNonStackedSize = 610;
        AppState.PageIcon = StaticData.DefaultPageIcon;
        AppState.HeaderData = HeaderData;
        AppState.ShowFooter = true;
        
        ProjectState.ProjectStatus = ProjectStatus.InDevelopment;
        ProjectState.PageEndGithub = "https://github.com/MitchelMA/Portfolio";
    }

}